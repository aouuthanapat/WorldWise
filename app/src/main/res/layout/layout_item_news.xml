<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/item_news_background"
    android:backgroundTint="@color/colorTertiary">

    <ImageView
        android:id="@+id/photo_news"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/jannik2"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/just_sans_ex_bold"
        android:textColor="@color/colorSecondary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/photo_news"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/just_sans_regular"
        android:textColor="@color/colorSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/photo_news"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/chapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/just_sans_regular"
        android:text="@string/home__item_news_chapter"
        android:textColor="@color/colorSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/photo_news"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <TextView
        android:id="@+id/theme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/just_sans_regular"
        android:text="@string/home__item_news_theme"
        android:textColor="@color/colorSecondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/chapter_text"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/just_sans_regular"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/photo_news"
        app:layout_constraintTop_toBottomOf="@+id/chapter_text" />

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/just_sans_regular"
        android:textColor="@color/colorSecondary"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/theme_text"
        app:layout_constraintTop_toBottomOf="@+id/theme_text" />


</androidx.constraintlayout.widget.ConstraintLayout>